<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lesson15Chat.client.Controller">
    <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
        <TextArea fx:id="viewMessageTEXT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" editable="false"/>
        <HBox prefHeight="0.0" prefWidth="700.0">
            <Button mnemonicParsing="false" onAction="#sendButtonPressed" prefHeight="44.0" prefWidth="150.0" text="Send" />
            <TextArea fx:id="sendMessageTEXT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="16.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>
    <VBox fx:id="nickBox" prefHeight="600.0" prefWidth="200.0" HBox.hgrow="SOMETIMES" />
</HBox>
